<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameListPage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_gameList"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_margin="16dp"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/colorGreen"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false"
        android:onClick="clickGame1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/game1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="QUIZ GAME"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="20sp"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardView_gameList"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_margin="16dp"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/colorGreen"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false"
        android:onClick="clickGame2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/game2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="MEMORY GAME"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="20sp"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/Mapbtn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_border"
        android:fontFamily="@font/poppins_medium"
        android:text="Maps"
        android:textColor="@color/black"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/RewardsBtn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/poppins_medium"
        android:text="Rewards"
        android:textColor="@color/black"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/AccountBtn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="160dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/poppins_medium"
        android:text="Account"
        android:textColor="@color/black"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Education"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="240dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/poppins_medium"
        android:text="Education"
        android:textColor="@color/black"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Games"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="340dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/poppins_medium"
        android:text="Games"
        android:textColor="@color/black"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:textStyle="bold" />

</RelativeLayout>